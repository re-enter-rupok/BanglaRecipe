            <RecipeTitle>Summer berry terrine</RecipeTitle>
            
            <RecipePicture>http://dmb-team.com/assets/recipe/berry_terrine.png</RecipePicture>
            
            <RecipeSummary>
                <RecipeSummaryOrigin>n/a</RecipeSummaryOrigin>

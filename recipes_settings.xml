            <RecipeSummary>
                <RecipeSummaryOrigin>UK</RecipeSummaryOrigin>
                <RecipeSummaryPreparationTime>10 mins.</RecipeSummaryPreparationTime>
                <RecipeSummaryCookingTime>30 mins.</RecipeSummaryCookingTime>
                <RecipeSummaryPortions>2</RecipeSummaryPortions>
                <RecipeSummaryCalories>217</RecipeSummaryCalories>
                <RecipeSummaryDescription>Mary Cadogan's aromatic broth will warm you up on a winter's evening - it contains ginger, which is particularly good for colds, too</RecipeSummaryDescription>
            </RecipeSummary>
            
            <RecipeIngredientsList>
                <RecipeIngredient>
                    <RecipeIngredientsName>chicken or vegetable stock (or Miso soup mix)</RecipeIngredientsName>
                    <RecipeIngredientsQuantity>900 ml.</RecipeIngredientsQuantity>
                </RecipeIngredient>
                 <RecipeIngredient>
                    <RecipeIngredientsName>boneless, skinless chicken breast, about 175g/6oz</RecipeIngredientsName>
                    <RecipeIngredientsQuantity>1</RecipeIngredientsQuantity>
                </RecipeIngredient>
                 <RecipeIngredient>
                    <RecipeIngredientsName>chopped fresh root ginger</RecipeIngredientsName>
                    <RecipeIngredientsQuantity>1 tbsp</RecipeIngredientsQuantity>
                </RecipeIngredient>
                 <RecipeIngredient>
                    <RecipeIngredientsName>garlic clove, finely chopped</RecipeIngredientsName>
                    <RecipeIngredientsQuantity>1</RecipeIngredientsQuantity>
                </RecipeIngredient>
                 <RecipeIngredient>
                    <RecipeIngredientsName>rice or wheat noodles</RecipeIngredientsName>
                    <RecipeIngredientsQuantity>50 g.</RecipeIngredientsQuantity>
                </RecipeIngredient>
                 <RecipeIngredient>
                    <RecipeIngredientsName>sweetcorn, canned or frozen</RecipeIngredientsName>
                    <RecipeIngredientsQuantity>2 tbsp</RecipeIngredientsQuantity>
                </RecipeIngredient>
                 <RecipeIngredient>
                    <RecipeIngredientsName>mushrooms, thinly sliced</RecipeIngredientsName>
                    <RecipeIngredientsQuantity>2-3</RecipeIngredientsQuantity>
                </RecipeIngredient>
                 <RecipeIngredient>
                    <RecipeIngredientsName>spring onions, shredded</RecipeIngredientsName>
                    <RecipeIngredientsQuantity>2</RecipeIngredientsQuantity>
                </RecipeIngredient>
                <RecipeIngredient>
                    <RecipeIngredientsName>soy sauce, plus extra for serving</RecipeIngredientsName>
                    <RecipeIngredientsQuantity>2 tbsp</RecipeIngredientsQuantity>
                </RecipeIngredient>
                <RecipeIngredient>
                    <RecipeIngredientsName>mint or basil leaves and a little shredded chilli (optional), to serve</RecipeIngredientsName>

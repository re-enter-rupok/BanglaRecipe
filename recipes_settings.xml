                </RecipeIngredient>
                <RecipeIngredient>
                    <RecipeIngredientsName>tomatoes - diced</RecipeIngredientsName>
                    <RecipeIngredientsQuantity>4</RecipeIngredientsQuantity>
                </RecipeIngredient>
                <RecipeIngredient>
                    <RecipeIngredientsName>jalapeno pepper - seeded and minced</RecipeIngredientsName>
                    <RecipeIngredientsQuantity>1</RecipeIngredientsQuantity>
                </RecipeIngredient>
                <RecipeIngredient>
                    <RecipeIngredientsName>chopped fresh cilantro</RecipeIngredientsName>
                    <RecipeIngredientsQuantity>1/2</RecipeIngredientsQuantity>
                </RecipeIngredient>
                <RecipeIngredient>
                    <RecipeIngredientsName>garlic - minced</RecipeIngredientsName>
                    <RecipeIngredientsQuantity>3</RecipeIngredientsQuantity>
                </RecipeIngredient>
                <RecipeIngredient>
                    <RecipeIngredientsName>salt</RecipeIngredientsName>
                    <RecipeIngredientsQuantity>1 teaspoon</RecipeIngredientsQuantity>
                </RecipeIngredient>
                <RecipeIngredient>
                    <RecipeIngredientsName>fresh lime juice</RecipeIngredientsName>
                    <RecipeIngredientsQuantity>2 tablespoons</RecipeIngredientsQuantity>
                </RecipeIngredient>
                 <RecipeIngredient>
                    <RecipeIngredientsName>chopped red onion</RecipeIngredientsName>
                    <RecipeIngredientsQuantity>1/4 cup</RecipeIngredientsQuantity>
                </RecipeIngredient>
                 <RecipeIngredient>
                    <RecipeIngredientsName>olive oil</RecipeIngredientsName>
                    <RecipeIngredientsQuantity>3 tablespoons</RecipeIngredientsQuantity>
                </RecipeIngredient>
